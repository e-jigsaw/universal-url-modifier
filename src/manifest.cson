manifest_version: 2
name: 'universal-url-modifier'
description: 'Modify URL when you access anything you want web pages'
version: '0.0.1'
content_scripts: [
  {
    matches: [
      'http://amazon.co.jp/*'
      'http://www.amazon.co.jp/*'
    ]
    run_at: 'document_end'
    js: ['js/amazon.js']
  }
  {
    matches: [
      'https://pbs.twimg.com/*'
    ]
    run_at: 'document_end'
    js: ['js/twimg.js']
  }
]
